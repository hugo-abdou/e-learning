{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["resources/ts/*"],
            "@editor": ["resources/editor/*"]
        },
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "types": ["vite/client"]
    },
    "include": ["vite.config.*", "resources/**/*.js", "resources/**/*.jsx", "resources/**/*.vue", "ar-web/vite.config.js"],
    "exclude": ["node_modules"]
}
