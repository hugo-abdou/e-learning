{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": "./",
        "useDefineForClassFields": true,
        "isolatedModules": true,
        "strict": true,
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "sourceMap": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["resources/ts/*"],
            "@themeConfig": ["themeConfig.ts"],
            "@layouts/*": ["resources/ts/@layouts/*"],
            "@layouts": ["resources/ts/@layouts"],
            "@core/*": ["resources/ts/@core/*"],
            "@core": ["resources/ts/@core"],
            "@images/*": ["images/*"],
            "@styles/*": ["styles/*"],
            "@axios": ["resources/ts/plugins/axios"],
            "@validators": ["resources/ts/@core/utils/validators"],
            "@core-scss/*": ["resources/styles/@core"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "skipLibCheck": true,
        "types": ["vite/client", "vite-plugin-pages/client", "vite-plugin-vue-layouts/client", "unplugin-vue-define-options/macros-global"]
    },
    "exclude": ["dist", "node_modules", "resources/ts/@iconify/*.js"],
    "include": [
        "vite.config.*",
        "env.d.ts",
        "shims.d.ts",
        "resources/ts/**/*",
        "resources/ts/**/*.vue",
        "themeConfig.ts",
        "auto-imports.d.ts",
        "components.d.ts"
    ]
}
